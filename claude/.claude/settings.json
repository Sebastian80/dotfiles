{
  "cleanupPeriodDays": 30,
  "env": {
    "BASH_ENV": "/home/sebastian/.bash/path.bash",
    "BASH_DEFAULT_TIMEOUT_MS": "60000",
    "BASH_MAX_TIMEOUT_MS": "600000",
    "MCP_TIMEOUT": "60000",
    "MAX_MCP_OUTPUT_TOKENS": "50000",
    "DISABLE_TELEMETRY": "1",
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "1",
    "ENABLE_TOOL_SEARCH": "true"
  },
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "plansDirectory": ".claude/plan",
  "permissions": {
    "allow": [
      "Bash",
      "Read",
      "Glob",
      "Grep",
      "WebFetch",
      "WebSearch",
      "Skill",
      "Edit",
      "Write",
      "mcp__*"
    ],
    "deny": [
      "Read(.env*)",
      "Read(*.env)",
      "Read(*credentials*)",
      "Read(*secret*)",
      "Read(*.pem)",
      "Read(*.key)",
      "Read(~/.ssh/**)",
      "Read(~/.aws/**)",
      "Read(~/.gnupg/**)",
      "Read(~/.env.jira)",
      "Write(.env*)",
      "Write(*.env)",
      "Write(*credentials*)",
      "Write(*secret*)",
      "Bash(rm -rf /)",
      "Bash(rm -rf /home)",
      "Bash(rm -rf ~)",
      "Bash(mkfs)",
      "Bash(fdisk)",
      "Bash(parted)",
      "Bash(dd if=)",
      "Bash(sudo)",
      "Bash(su )",
      "Bash(doas)",
      "Bash(sh -c)",
      "Bash(bash -c)",
      "Bash(eval)",
      "Bash(exec)"
    ],
    "ask": [
      "Bash(rm)",
      "Bash(rmdir)",
      "Bash(kill)",
      "Bash(killall)",
      "Bash(pkill)",
      "Bash(git push --force)",
      "Bash(git push -f)",
      "Bash(git push origin master)",
      "Bash(git push origin main)",
      "Bash(git reset --hard)",
      "Bash(git clean)",
      "Bash(git branch -D)",
      "Bash(git push --delete)",
      "Bash(git rebase)",
      "Bash(npm publish)",
      "Bash(docker push)",
      "Bash(composer require)",
      "Bash(pip install)",
      "Bash(reboot)",
      "Bash(shutdown)",
      "Bash(poweroff)"
    ],
    "defaultMode": "default"
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "notify-send -t 5000 'Claude Code' 'Task completed' 2>/dev/null || true"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "/bin/bash /home/sebastian/.claude/statusline-omp.sh"
  },
  "enabledPlugins": {
    "superpowers@superpowers-dev": true,
    "jira@sebastian-marketplace": true,
    "project-memory-integration@local": true,
    "code-nav@sebastian-marketplace": true,
    "agent-browser@sebastian-marketplace": true,
    "cc-docs@sebastian-marketplace": true,
    "tmux-cli@sebastian-marketplace": true,
    "validate-frontmatter@sebastian-marketplace": true,
    "project-memory@sebastian-marketplace": true
  },
  "language": "english",
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "excludedCommands": [
      "docker",
      "git",
      "ssh",
      "scp",
      "rsync",
      "rm",
      "kill",
      "killall",
      "pkill"
    ]
  },
  "autoUpdatesChannel": "latest",
  "alwaysThinkingEnabled": true
}
